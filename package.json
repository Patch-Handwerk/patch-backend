{
  "name": "patch_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "=22.14.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "prebuild": "npm install",
    "build": "tsc -p tsconfig.build.json",
    "build:nest": "nest build", 
    "build:tsc": "tsc -p tsconfig.build.json",
    "build:simple": "npx tsc --outDir dist --rootDir src --module commonjs --target ES2020 --experimentalDecorators --emitDecoratorMetadata --skipLibCheck --esModuleInterop src/**/*.ts",
    "check-node": "node --version && npm --version",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node --max-old-space-size=1024 dist/src/main",
    "start:dev": "nest start --watch",
    "start:dev:safe": "scripts\\start-dev.bat",
    "kill-port": "powershell -ExecutionPolicy Bypass -File scripts\\kill-port.ps1",
    "redis:monitor": "powershell -ExecutionPolicy Bypass -File scripts\\monitor-redis.ps1 -Monitor",
    "redis:stats": "powershell -ExecutionPolicy Bypass -File scripts\\monitor-redis.ps1 -Stats",
    "redis:keys": "powershell -ExecutionPolicy Bypass -File scripts\\monitor-redis.ps1 -Keys",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "export:docs": "node scripts/export-swagger.js",
    "share:api": "npm run start:dev & timeout 5 && npm run export:docs",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./data-source.ts",
    "migration:generate": "typeorm-ts-node-commonjs -d ./data-source.ts migration:generate src/database/migrations/$npm_config_name",
    "migration:run": "typeorm-ts-node-commonjs -d ./data-source.ts migration:run",
    "seed": "ts-node -r tsconfig-paths/register ./run-seed.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "^7.1.1",
    "cache-manager-redis-store": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.22",
    "@nestjs/cli": "^11.0.0",
    "typescript": "^5.7.3",
    "@types/node": "^22.10.7",
    "@types/express": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
